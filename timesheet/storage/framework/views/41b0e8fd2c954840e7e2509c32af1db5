
<?php if(Route::currentRouteName() == "companies.create"): ?>
  <?php echo Form::model($company, ['route' => ['companies.store'], 'class' => 'form-horizontal']); ?>

<?php elseif(Route::currentRouteName() == "companies.edit"): ?>
  <?php echo Form::model($company, ['route' => ['companies.update', 'id' => $company->id], 'method' => 'put', 'class' => 'form-horizontal']); ?>

<?php endif; ?>

<div class="form-group">
  <?php echo Form::label('company[name]', 'Name', ['class' => 'col-md-4 control-label']); ?>

  <div class="col-md-6">
    <?php echo Form::text('company[name]', $company->name, ['class' => 'form-control']); ?>

  </div>
</div>

<?php if(Route::currentRouteName() == "companies.create"): ?>
  <div class="form-group">
    <div class="col-md-6 col-md-offset-4">
      <a class="btn btn-danger" href="<?php echo e(url('/projects')); ?>">Cancel</a>
      <button type="submit" class="btn btn-success">Create</button>
    </div>
  </div>
<?php elseif(Route::currentRouteName() == "companies.edit"): ?>
  <div class="form-group">
    <div class="col-md-6 col-md-offset-4">
      <a class="btn btn-danger" href="<?php echo e(route('companies.show', ['id' => $company->id])); ?>">Cancel</a>
      <button type="submit" class="btn btn-success">Update</button>
    </div>
  </div>
<?php endif; ?>

<?php echo Form::close(); ?>

