        <table class="table table-striped table-bordered">
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
          <?php foreach($companies as $company): ?>
            <tr>
              <td><?php echo e($company->name); ?></td>
              <td><a href="<?php echo e(route('companies.show', ['id' => $company->id])); ?>">Details</a></td>
            </tr>
          <?php endforeach; ?>
        </table>
      <?php else: ?>
        <p>No companies found.</p>
      <?php endif; ?>
    </div>
  </div>
